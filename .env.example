# Monic Configuration

# General
MONIC_APP_NAME=Monic

# HTTP Server
MONIC_HTTP_SERVER_ENABLED=true
MONIC_HTTP_SERVER_PORT=8080
MONIC_HTTP_SERVER_USERNAME=admin
MONIC_HTTP_SERVER_PASSWORD=monic123

# System Checks
MONIC_SYSTEM_CHECKS_INTERVAL=60
MONIC_SYSTEM_CHECKS_CPU_THRESHOLD=80
MONIC_SYSTEM_CHECKS_MEMORY_THRESHOLD=85
MONIC_SYSTEM_CHECKS_DISK_THRESHOLD=90
MONIC_SYSTEM_CHECKS_DISK_PATHS=/

# Alerting
MONIC_ALERTING_ENABLED=false
MONIC_ALERTING_COOLDOWN=60
MONIC_ALERTING_ALERT_LEVELS=critical,warning

# Telegram Alerts
MONIC_ALERTING_TELEGRAM_ENABLED=false
MONIC_ALERTING_TELEGRAM_BOT_TOKEN=your_bot_token
MONIC_ALERTING_TELEGRAM_CHAT_ID=your_chat_id

# Email Alerts
MONIC_ALERTING_EMAIL_ENABLED=false
MONIC_ALERTING_EMAIL_SMTP_HOST=smtp.example.com
MONIC_ALERTING_EMAIL_SMTP_PORT=587
MONIC_ALERTING_EMAIL_USERNAME=user@example.com
MONIC_ALERTING_EMAIL_PASSWORD=secret
MONIC_ALERTING_EMAIL_FROM=monic@example.com
MONIC_ALERTING_EMAIL_TO=admin@example.com
MONIC_ALERTING_EMAIL_USE_TLS=true

# Docker Monitoring
MONIC_DOCKER_CHECKS_ENABLED=true
MONIC_DOCKER_CHECKS_CHECK_INTERVAL=60
# Comma separated list of containers to monitor (leave empty for all)
MONIC_DOCKER_CHECKS_CONTAINERS=
